# ✅ Allow .mp3 files to be served
AddType audio/mpeg .mp3

# ✅ Set caching headers to allow browsers to store the audio forever
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType audio/mpeg "access plus 10 years"
</IfModule>

# ✅ Allow access from all users
<FilesMatch "\.(mp3)$">
  Order allow,deny
  Allow from all
</FilesMatch>

# ✅ Prevent directory listing (optional for security)
Options -Indexes
